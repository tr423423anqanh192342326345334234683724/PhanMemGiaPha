<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:background="@drawable/anhtitel"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tài Khoản"
            android:textSize="24sp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/taikhoan"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:hint="Nhập Tài Khoản"
            android:textSize="18sp"
            android:background="@drawable/box"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mật Khẩu"
            android:textSize="24sp"
            android:textColor="#000"
            app:layout_constraintTop_toBottomOf="@id/taikhoan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/matkhau"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:hint="Nhập Mật Khẩu"
            android:textSize="18sp"
            android:background="@drawable/box"
            android:padding="16dp"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/dangnhap"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Đăng Nhập"
            android:textSize="18sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFF"

            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/matkhau"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dangki"
            app:layout_constraintWidth_percent="0.48" />

        <Button
            android:id="@+id/dangki"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Đăng Ký"
            android:textSize="18sp"
            android:backgroundTint="#FF9800"
            android:textColor="#FFF"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/matkhau"
            app:layout_constraintStart_toEndOf="@+id/dangnhap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
